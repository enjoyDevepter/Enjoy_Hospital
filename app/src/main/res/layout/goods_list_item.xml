<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:money="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/list_item_bg">

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_toRightOf="@id/image"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/title2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:layout_marginTop="6dp"
        android:text="规格："
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/title2_title"
        android:layout_toRightOf="@id/title2_title"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/count_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title2_title"
        android:layout_below="@id/title2_title"
        android:layout_marginTop="6dp"
        android:text="已售："
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/count_title"
        android:layout_toRightOf="@id/count_title"
        android:textColor="#666666"
        android:textSize="14sp" />

    <com.github.cchao.MoneyView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/image"
        money:cent_size="15sp"
        money:money_color="#FFFF0000"
        money:point_padding_left="1dp"
        money:point_padding_right="5dp"
        money:prefix_padding="2dp"
        money:prefix_size="15sp"
        money:yuan_size="21sp" />

    <TextView
        android:id="@+id/buy"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@id/price"
        android:background="@drawable/buy_btn"
        android:gravity="center"
        android:text="立即下单"
        android:textColor="@color/white"
        android:textSize="13sp" />
</RelativeLayout>