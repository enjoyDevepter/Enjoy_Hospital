<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <include layout="@layout/title" />

        <View style="@style/divider_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/change1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:text="修改>"
                android:textColor="#ff333333"
                android:textSize="8sp" />

        </LinearLayout>

        <View style="@style/divider_3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="12dp"
                android:textColor="#ff333333"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/name"
                android:layout_below="@id/name"
                android:layout_marginTop="8dp"
                android:text="联系电话："
                android:textColor="#ff333333"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/phone_title"
                android:layout_toRightOf="@id/phone_title"
                android:textColor="#ff333333"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/name"
                android:layout_below="@id/phone_title"
                android:layout_marginTop="7dp"
                android:text="营业时间："
                android:textColor="#ff333333"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/time_title"
                android:layout_toRightOf="@id/time_title"
                android:textColor="#ff333333"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/name"
                android:layout_below="@id/time_title"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/location_icon"
                android:drawablePadding="3dp"
                android:textColor="#ff8a8a8a"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/change2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/name"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="修改>"
                android:textColor="#ff333333"
                android:textSize="8sp" />
        </RelativeLayout>


    </LinearLayout>

    <FrameLayout
        android:clickable="true"
        android:id="@+id/edit_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"
        android:visibility="gone">

        <RelativeLayout
            android:clickable="true"
            android:layout_width="304dp"
            android:layout_height="226dp"
            android:layout_gravity="center"
            android:background="@color/white">

            <TextView
                android:id="@+id/change_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="14dp"
                android:text="修改信息"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <View
                android:id="@+id/divider1"
                style="@style/divider_1"
                android:layout_below="@id/change_info" />

            <TextView
                android:id="@+id/name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/divider1"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:text="本店名称："
                android:textColor="#ff333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/name_double"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/name_title"
                android:layout_toRightOf="@id/name_title"
                android:textColor="#ff333333"
                android:textSize="12sp" />


            <LinearLayout
                android:id="@+id/phone_parent"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_alignLeft="@id/name_title"
                android:layout_below="@id/name_title"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="联系电话："
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_phone"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/change_password_et"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_parent"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_alignLeft="@id/name_title"
                android:layout_below="@id/phone_parent"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="营业时间："
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/et_time_start"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/change_password_et"
                    android:gravity="center_vertical"
                    android:textColor="#ff333333"
                    android:paddingLeft="5dp"
                    android:textSize="12sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="-"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/et_time_end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/change_password_et"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/addr_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/phone_parent"
                android:layout_below="@+id/time_parent"
                android:layout_marginTop="11dp"
                android:textColor="#ff333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/addr_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/addr_title"
                android:layout_toRightOf="@id/addr_title"
                android:text="地址："
                android:textColor="#ff333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/save"
                android:layout_width="77dp"
                android:layout_height="28dp"
                android:layout_below="@id/addr_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/hospital_info_save_btn_back"
                android:gravity="center"
                android:text="保存"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>
