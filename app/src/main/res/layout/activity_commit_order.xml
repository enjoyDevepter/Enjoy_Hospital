<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/title" />

        <View style="@style/divider_3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="118dp">

            <ImageView
                android:id="@+id/head_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="18dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/head_image"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@id/head_image"
                android:text="王军"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/name"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/name"
                android:text="18824321232"
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/name"
                android:layout_below="@id/name"
                android:layout_marginTop="7dp"
                android:text="北京市太和医疗整形美容医院"
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/member_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/hospital"
                android:layout_below="@id/hospital"
                android:layout_marginTop="7dp"
                android:text="会员编号："
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/member_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/member_code_title"
                android:layout_toRightOf="@id/member_code_title"
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/name"
                android:layout_below="@id/member_code_title"
                android:layout_marginTop="7dp"
                android:drawableLeft="@mipmap/location_icon"
                android:drawablePadding="5dp"
                android:text="北京朝阳区朝阳门外大街138号"
                android:textColor="#ff333333"
                android:textSize="12sp" />
        </RelativeLayout>

        <View style="@style/divider_3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="144dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp" />

            <TextView
                android:id="@+id/order_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@id/image"
                android:text="【超级水宝宝】拯救沙漠肌 还原水润嫩滑 让肌肤喝饱水"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@id/image"
                android:text="订单金额 "
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/price_title"
                android:layout_toRightOf="@id/price_title"
                android:text="¥"
                android:textColor="#666666"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/price_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/price_title"
                android:text="3280.00"
                android:textColor="#666666"
                android:textSize="17sp" />
        </RelativeLayout>

        <View style="@style/divider_3" />

        <TextView
            android:id="@+id/pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="14dp"
            android:text="二维码支付"
            android:textColor="#ff000000"
            android:textSize="13sp" />

        <View style="@style/divider_3" />

        <ImageView
            android:id="@+id/pay_image"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="21dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="#F5F5F5">

            <TextView
                android:id="@+id/make_sure_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/make_sure_btn"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>