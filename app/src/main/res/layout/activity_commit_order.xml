<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title"/>
    <View
        style="@style/divider_3"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="118dp">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="22dp"
            android:id="@+id/head_image"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="王军"
            android:layout_alignTop="@id/head_image"
            android:layout_toRightOf="@id/head_image"
            android:layout_marginLeft="22dp"
            android:textColor="#ff333333"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/name"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/name"
            android:text="18824321232"
            android:textColor="#ff333333"
            android:textSize="13sp"
            />
        <TextView
            android:layout_marginTop="7dp"
            android:layout_alignLeft="@id/name"
            android:layout_below="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市太和医疗整形美容医院"
            android:id="@+id/hospital"
            android:textColor="#ff666666"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/member_code_title"
            android:layout_alignLeft="@id/hospital"
            android:layout_marginTop="7dp"
            android:layout_below="@id/hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员编号："
            android:textColor="#ff666666"
            android:textSize="12sp"
            />

        <TextView
            android:layout_toRightOf="@id/member_code_title"
            android:layout_alignBottom="@id/member_code_title"
            android:id="@+id/member_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff666666"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/addr"
            android:drawableLeft="@mipmap/location_icon"
            android:layout_below="@id/member_code_title"
            android:drawablePadding="5dp"
            android:layout_marginTop="7dp"
            android:layout_alignLeft="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京朝阳区朝阳门外大街138号"
            android:textColor="#ff333333"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <View
        style="@style/divider_3"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="22dp"
            />

        <TextView
            android:id="@+id/order_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/image"
            android:text="【超级水宝宝】拯救沙漠肌 还原水润嫩滑 让肌肤喝饱水"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/image"
            android:text="订单金额 "
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/price_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/price_title"
            android:layout_toRightOf="@id/price_title"
            android:text="¥"
            android:textColor="#666666"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/price_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/price_title"
            android:text="3280.00"
            android:textColor="#666666"
            android:textSize="17sp" />
    </RelativeLayout>
    <View
        style="@style/divider_3"/>
</LinearLayout>