<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:money="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include layout="@layout/title" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/member_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="会员编号："
                        android:textColor="#FF666666"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/member_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/member_id"
                        android:layout_toRightOf="@id/member_id"
                        android:textColor="#FF333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/phone_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/member_id"
                        android:layout_below="@id/member_id"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="手机号码："
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/member_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/member_code"
                        android:layout_alignTop="@id/phone_tag"
                        android:textColor="#FF333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/hospital_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/member_id"
                        android:layout_below="@id/phone_tag"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="选择医院："
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/hosptial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/member_code"
                        android:layout_alignTop="@id/hospital_tag"
                        android:textColor="#FF333333"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_below="@id/hospital_tag"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/remark_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="10dp"
                            android:text="备注："
                            android:textColor="#666666"
                            android:textSize="13sp" />

                        <EditText
                            android:id="@+id/remark"
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:background="@drawable/remark_edit_back"
                            android:paddingLeft="5dp"
                            android:textColor="#FF333333"
                            android:textSize="13sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/list_item_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/image"
                        android:layout_marginLeft="22dp"
                        android:layout_toRightOf="@id/image"
                        android:textColor="#FF000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/image"
                        android:layout_alignLeft="@id/name"
                        android:layout_toRightOf="@id/image"
                        android:text="金额"
                        android:textColor="#FF666666"
                        android:textSize="14sp" />


                    <com.github.cchao.MoneyView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/price_title"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/price_title"
                        money:cent_size="13sp"
                        money:money_color="#FF666666"
                        money:money_text="0.00"
                        money:point_padding_left="1dp"
                        money:point_padding_right="5dp"
                        money:prefix_color="#FF666666"
                        money:prefix_padding="2dp"
                        money:prefix_size="13sp"
                        money:yuan_size="17sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/spec"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@drawable/list_item_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="22dp"
                        android:paddingRight="22dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="规格选择："
                            android:textColor="#FF666666"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/goods_spec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="#FF666666"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="14dp"
                            android:layout_height="5dp"
                            android:layout_marginLeft="8dp"
                            android:background="@mipmap/three_point" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="22dp"
                        android:paddingRight="22dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="消费币"
                            android:textColor="#FF666666"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="剩余"
                            android:textColor="#FFB5B5B5"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:textColor="#FFB5B5B5"
                            android:textSize="11sp" />

                        <EditText
                            android:id="@+id/money"
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:background="@drawable/order_input_bg"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:textColor="#FFB5B5B5"
                            android:textSize="11sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品金额"
                            android:textColor="#666666"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="¥"
                            android:textColor="#666666"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/payPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消费币"
                            android:textColor="#666666"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="- ¥"
                            android:textColor="#666666"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/payMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666666"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/list_item_up_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="6dp"
                android:text="合计："
                android:textColor="#ff333333"
                android:textSize="13sp" />


            <com.github.cchao.MoneyView
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                money:cent_size="13sp"
                money:money_color="#FF666666"
                money:money_text="0.00"
                money:point_padding_left="1dp"
                money:point_padding_right="5dp"
                money:prefix_color="#FF666666"
                money:prefix_padding="2dp"
                money:prefix_size="13sp"
                money:yuan_size="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="#ffff5656"
                android:gravity="center"
                android:text="确认订单"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="38dp"
        android:orientation="vertical">

        <View
            android:id="@+id/mask_spec"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#88888888"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/spec_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FFFFFFFF"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/spec_image"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp" />


            <LinearLayout
                android:id="@+id/spec_close"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@mipmap/close_black" />

            </LinearLayout>

            <TextView
                android:id="@+id/spec_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/spec_close"
                android:layout_toRightOf="@id/spec_image"
                android:lines="2"
                android:textColor="#FF000000"
                android:textSize="13sp" />


            <LinearLayout
                android:id="@+id/spce_price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/spec_name"
                android:layout_below="@id/spec_name"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <com.github.cchao.MoneyView
                    android:id="@+id/spec_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/name"
                    android:layout_centerVertical="true"
                    money:cent_size="17sp"
                    money:money_color="#FFFF0000"
                    money:money_text="0.00"
                    money:point_padding_left="1dp"
                    money:point_padding_right="5dp"
                    money:prefix_padding="2dp"
                    money:prefix_size="12sp"
                    money:yuan_size="20sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/spec_id_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/spce_price_layout"
                android:layout_below="@id/spce_price_layout"
                android:layout_marginTop="10dp"
                android:text="项目编号："
                android:textColor="#FF666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/spec_goods_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spce_price_layout"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/spec_id_info"
                android:textColor="#FF666666"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/spce_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/spec_image"
                android:layout_below="@id/spec_image"
                android:layout_marginTop="15dp"
                android:text="规格"
                android:textColor="#FF666666"
                android:textSize="13sp" />

            <cn.ehanmy.hospital.mvp.ui.widget.LabelsView
                android:id="@+id/specs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/spce_tag"
                android:layout_below="@id/spce_tag"
                android:layout_marginTop="10dp"
                money:labelBackground="@drawable/goods_spec_item_bg"
                money:labelTextColor="@drawable/goods_spec_item_text_bg"
                money:labelTextPaddingBottom="5dp"
                money:labelTextPaddingLeft="10dp"
                money:labelTextPaddingRight="10dp"
                money:labelTextPaddingTop="5dp"
                money:labelTextSize="12sp"
                money:lineMargin="10dp"
                money:selectType="SINGLE"
                money:wordMargin="10dp" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>