<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <include layout="@layout/title"/>

    <View style="@style/divider_3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/old_password"
            android:hint="原密码"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/change_password_et"
            android:layout_width="match_parent"
            android:layout_height="16dp" />


        <EditText
            android:hint="新密码"
            android:id="@+id/new_password"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/change_password_et"
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:hint="重复密码"
            android:id="@+id/confirm_password"
            android:background="@drawable/change_password_et"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <View style="@style/divider_1"/>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="9dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="密码由6-20位英文字母、数字或符号组成"
            android:textColor="#ff979797"
            android:textSize="8sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/make_sure_btn"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/make_sure_btn"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="8sp" />
</LinearLayout>